<launch>

  <arg name="aggregated_topic" default="Aggregated" />
  <arg name="link_namespace" default="link" />
  <arg name="relay_namespace" default="relay" />

  <!-- Set up the message demulitplexer/deserializer -->

  <node pkg="teleop_mux_demux" type="message_demultiplexer.py" name="demultiplexer" output="screen" >
    <param name="aggregated_topic" type="string" value="$(arg aggregated_topic)" />
    <param name="republish_namespace" type="string" value="$(arg link_namespace)" />
  </node>

  <!-- Set up link endpoint for testing -->

  <include file="$(find teleop_launch)/launch/hybrid_link_end_chain.launch">
    <arg name="chain_name" value="jointstate" />
    <arg name="chain_type" value="sensor_msgs/JointState" />
    <arg name="input_topic" value="robot/joint_states" />
    <arg name="output_topic" value="relay/joint_states" />
    <arg name="relay_namespace" value="$(arg relay_namespace)" />
    <arg name="link_namespace" value="$(arg link_namespace)" />
  </include>

  <node name="workstation_state_publisher" pkg="robot_state_publisher" type="state_publisher" output="screen" >
    <remap from="joint_states" to="relay/joint_states" />
    <remap from="tf" to="workstation/tf" />
  </node>

</launch>
